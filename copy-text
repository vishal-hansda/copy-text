<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Responsive Text Copy Boxes</title>
  <style>
    body {
      background-color: #0d1117;
      color: #c9d1d9;
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      min-height: 100vh;
      margin: 0;
      overflow-y: auto;
      padding: 1.5rem;
    }

    .container {
      display: flex;
      flex-direction: column;
      gap: 0.8rem; /* ✅ Adds space between ALL boxes */
      width: 100%;
      max-width: 600px; /* Responsive max width */
      margin: 0 auto;
    }

    .box {
      position: relative;
      display: flex;
      align-items: center;
      background-color: #161b22;
      border: 1px solid #30363d;
      border-radius: 1.5rem;
      padding: 0.5rem 0.5rem 0.5rem 1rem;
      overflow: hidden;
      box-sizing: border-box;
      transition: background-color 0.2s ease;
    }

    textarea {
      flex: 1;
      background: transparent;
      border: none;
      color: #c9d1d9;
      font-size: 1rem;
      outline: none;
      resize: none;
      width: 100%;
      min-height: 2.5rem;
      font-family: inherit;
    }

    button {
      background-color: #6c757d;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      cursor: pointer;
      font-size: 0.9rem;
      border-radius: 2rem;
      transition: background-color 0.2s ease;
      flex-shrink: 0;
    }

    button:hover {
      background-color: #868e96;
    }

    /* Auto-resize for first textarea */
    #text1 {
      padding-right: 4rem;
    }

    .box:first-child button {
      position: absolute;
      top: 0.5rem;
      right: 0.5rem;
    }

    /* ✅ Responsive adjustments */
    @media (max-width: 600px) {
      .container {
        max-width: 100%;
        gap: 0.7rem;
      }
      textarea {
        font-size: 0.95rem;
      }
      button {
        font-size: 0.85rem;
        padding: 0.4rem 0.8rem;
      }
    }

    @media (max-width: 400px) {
      body {
        padding: 1rem;
      }
      .box {
        border-radius: 1rem;
      }
    }
  </style>
</head>
<body>

  <div class="container" id="container">
    <!-- First box (auto-resizable) -->
    <div class="box">
      <textarea id="text1" placeholder="Enter text..." oninput="autoResize(this)"></textarea>
      <button onclick="copyText('text1', this)">Copy</button>
    </div>
  </div>

  <script>
    const container = document.getElementById("container");

    // ✅ Dynamically add boxes 2–10 with automatic spacing
    for (let i = 2; i <= 10; i++) {
      const box = document.createElement("div");
      box.className = "box";
      box.innerHTML = `
        <textarea id="text${i}" placeholder="Enter text..."></textarea>
        <button onclick="copyText('text${i}', this)">Copy</button>
      `;
      container.appendChild(box);
    }

    // ✅ Copy functionality
    function copyText(id, button) {
      const input = document.getElementById(id);
      input.select();
      input.setSelectionRange(0, 99999);
      navigator.clipboard.writeText(input.value);

      button.textContent = "Copied!";
      button.style.backgroundColor = "#c0c0c0";

      setTimeout(() => {
        button.textContent = "Copy";
        button.style.backgroundColor = "#6c757d";
      }, 1500);
    }

    // ✅ Auto-resize for first textarea
    function autoResize(textarea) {
      textarea.style.height = 'auto';
      textarea.style.height = `${textarea.scrollHeight}px`;
    }

    autoResize(document.getElementById("text1"));

    // ✅ Blur textarea when clicking outside
    document.addEventListener("click", (event) => {
      if (event.target.tagName.toLowerCase() !== "textarea") {
        const active = document.activeElement;
        if (active && active.tagName.toLowerCase() === "textarea") active.blur();
      }
    });
  </script>

</body>
</html>
